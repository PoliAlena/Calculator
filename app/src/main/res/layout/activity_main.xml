<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="441dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey"
                android:orientation="vertical"></LinearLayout>
            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="441dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/operation"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="start"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="50sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/grey"
                android:orientation="vertical">
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="572dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/grey">

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                style="@style/Buttons"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:backgroundTint="@color/RED"
                android:insetLeft="2dp"
                android:insetRight="4dp"
                android:text="C" />

            <Button
                style="@style/Buttons"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:backgroundTint="@color/brown"
                android:text="+/-" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                style="@style/Buttons"
                android:backgroundTint="@color/white2"
                android:textColor="@color/black"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                style="@style/Buttons"
                android:backgroundTint="@color/white2"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="%"
                style="@style/Buttons"
                android:backgroundTint="@color/white2"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="171dp"
                android:text="+"
                style="@style/Buttons"
                android:backgroundTint="@color/white2"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
            android:layout_width="wrap_content"
            android:layout_height="75dp"
                android:text="1"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="3"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="5"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="7"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="9"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>

            <Button
                style="@style/Buttons"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="("
                android:backgroundTint="@color/grey2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:text="-"
                style="@style/Buttons"
                android:backgroundTint="@color/white2"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="2"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="4"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="6"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="8"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="0"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text=")"
                style="@style/Buttons"
                android:backgroundTint="@color/grey2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:text="x"
                style="@style/Buttons"
                android:backgroundTint="@color/white2"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="385dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="1"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="2"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="3"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="4"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="5"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="6"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="7"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="8"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="9"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:text="0"
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>

                    <Button
                        android:layout_width="114dp"
                        android:layout_height="55dp"
                        android:text=""
                        style="@style/Buttons1"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="1"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="2"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="3"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="4"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="5"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="6"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="7"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="8"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="9"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <Button
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:text="0"
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>

                        <Button
                            android:layout_width="114dp"
                            android:layout_height="55dp"
                            android:text=""
                            style="@style/Buttons1"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp">

                        <Button
                            style="@style/Buttons"
                            android:layout_width="wrap_content"
                            android:layout_height="97dp"
                            android:backgroundTint="@color/white2"
                            android:text="1"
                            android:textColor="@color/black" />

                        <Button
                            style="@style/Buttons"
                            android:layout_width="wrap_content"
                            android:layout_height="97dp"
                            android:backgroundTint="@color/orange"
                            android:text="="
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>


</LinearLayout>